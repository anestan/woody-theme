{% extends "base.twig" %}

{% block content %}
    <main id="main-content" class="content-type-page {{ page_type|default }}">
        <div class="content-wrapper">
            {{ page_hero|default }}
            {# {% include 'parts/shares.twig' %} #}
            {% block page_teaser %}
                <header class="page-teaser">
                    {{ page_teaser }}
                </header>
            {% endblock %}

            {% block home_slider %}{% endblock %}

            {{ playlist_template|default }}
            {% for key, section in the_sections %}
                <div class="page-section page-section-{{ key }}">
                    {{ section }}
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}

{% block metas %}
    <script>
        var siteConfig = {{site_config}};
    </script>
{% endblock %}
