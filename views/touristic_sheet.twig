{% extends "base.twig" %}

{% block metas %}
    {% for meta in metas %}
        {{ meta }}
    {% endfor %}
{% endblock metas %}

{% block content %}

    <main class="content-type-page">
        <div class="content-wrapper">
            {% if sheet_template | default %}{{ sheet_template }}{% endif %}
        </div>
    </main>
{% endblock content %}

{% block styles %}
    <link rel="stylesheet" href="https://api.tourism-system.com/render/assets/angular/styles/vendor.css">
    <link rel="stylesheet" href="https://api.tourism-system.com/render/assets/styles/sheet.css">
