{% if element.fields_group.grid_size == 'col_2' %}
    {% set columns = 'cell small-12 medium-6 large-6' %}
{% elseif element.fields_group.grid_size == 'col_3' %}
    {% set columns = 'cell small-6 large-4' %}
{% elseif element.fields_group.grid_size == 'col_6' %}
    {% set columns = 'cell small-6 medium-4 large-2' %}
{% endif %}

{% if element.title | default %}
    <h2>{{ element.title }}</h2>
{% endif %}

{% if element.fields_group.gallery_items | default %}
    <div class="grid-x grid-margin-x">
        {% for image in element.fields_group.gallery_items %}
            <a class="{{ columns }}" href="">
                <img src="{{ TimberImage(image).src('featured-small') }}" alt=""/>
            </a>
        {% endfor %}
    </div>
{% endif %}
