{% if element.alignement == 'top' %}
    {% set block_classes = 'image-top' %}
{% elseif element.alignement == 'left' %}
    {% set block_classes = 'image-left grid-x grid-margin-x' %}
    {% set grid_classes = 'cell small-12 medium-6' %}
{% elseif element.alignement == 'right' %}
    {% set block_classes = 'image-right grid-x grid-margin-x reverse' %}
    {% set grid_classes = 'cell small-12 medium-6' %}
{% endif %}

{% if element.title | default %}
    <h2>{{ element.title }}</h2>
{% endif %}
<div class="{{ block_classes }} focus">
    {% if element.img | default %}

        {% if grid_classes %}
            <div class="{{ grid_classes }}">
            {% endif %}
            <img src="{{ TimberImage(element.img).src('featured-small') }}" alt="" }}/>
            {% if grid_classes %}
            </div>
        {% endif %}
    {% endif %}
    {% if element.text | default %}
        {% if grid_classes %}
            <div class="{{ grid_classes }}">
            {% endif %}
            {{ element.text }}
        {% endif %}
        {% if element.link.title and element.link.url | default %}
            <a class="button" href="{{ element.link.url }}" {% if element.link.target %} target="{{ element.link.target }}" {% endif %}>{{ element.link.title }}</a>
        {% endif %}
        {% if grid_classes %}
        </div>
    {% endif %}
</div>
