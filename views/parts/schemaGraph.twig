<script type='application/ld+json' class='woody-schema-graph'>
{
    "@context":"https://schema.org",
    "@graph":
    [
        {
            "@type":"WebSite",
            "@id":"{{ http_host }}/#website",
            "url":"{{ http_host }}",
            "name":"{{ site.name }}",
            "description":"{{ site.description }}",
            "potentialAction":
            {
                "@type":"SearchAction",
                "target":"{{ globals.woody_options_pages.search_url|getPermalink }}?query={search_term_string}",
                "query-input":"required name=search_term_string"
            }
        },
        {
            "@type":"WebPage",
            "@id":"{{ http_host }}/#webpage",
            "url":"{{ http_host }}",
            "inLanguage":"{{ site.language }}",
            "name":"{{ title|trim }}",
            "isPartOf":{
                "@id":"{{ http_host }}/#website"
            },
            "datePublished":"{{ globals.post.post_date }}",
            "dateModified":"{{ globals.post.post_modified }}",
            "description":"{{ metas.meta_description }}"
        }
    ]
}
</script>
